<link rel="stylesheet" href="css/chat.css">

<div class="container">

    <!-- The main chatbox area -->
    <div class="main">
        
        <!-- Chatbox header -->
        <div class="chat-area-header">
            <div class="row">
                <h4><span class="grey-text text-lighten-5">Hi, Welcome to <span id="chatroom-name"></span></h4>
                <div class="col s9 m11">
                    <i class="fa fa-paper-plane left" style="font-size: 20px;"></i>
                    <span id="typing" class="truncate"></span>
                </div>
                <div class="col s3 m1">

                    <!--This link triggers the modal displaying the names of the people online-->
                    <a href="#onlineUserModal" class="tooltipped modal-trigger" data-position="bottom"
                        data-tooltip="Check online users">
                        <span class="new badge green right truncate" data-target="onlineUserModal"
                            data-badge-caption="online" id="usersOnline"></span>
                    </a>
                </div>
            </div>
        </div>

        <!-- The main message-area where all the messages pop up -->
        <div class="chat-area-body" id="message-body"></div>

        <!-- The form for sending the messages -->
        <form class="chat-send-form">
            <div class="row">
                <div class="col s8 m10">
                    <input type="text" class="validate" style="margin-left: 5px;" id="user-chat"
                        placeholder="Type something.." required>
                </div>
                <div class="co12 m1 center" style="margin-top: 20px;">
                    <button class="btn waves-effect waves-light tooltipped" id="chat-send" type="submit" data-position="top"
                    data-tooltip="Send">
                        <i class="material-icons center">send</i></button>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Display names of online people in the modal -->
<div id="onlineUserModal" class="modal">
    <div class="modal-content">
        <h5 class="center green-text">Who's Online?</h5>
        <ul class="collection" id="usersOnlineList">
        </ul>
    </div>
</div>
<script src="js/chatClient.js"></script>